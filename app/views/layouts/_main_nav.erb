<div class="container">

  <div class="navbar-header">

    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>

  </div>

  <div class="navbar-collapse collapse" id="navbar-collapse">

    <ul class="nav navbar-nav">

        <!-- ABOUT CONTROLLER TREE -->
        <%= content_tag :li, class:"nav-item dropdown #{is_active?('about')}" do %>

            <%= link_to "#", class:'dropdown-toggle', data: { toggle:'dropdown', hover:'dropdown', delay:'0' } do %>
                About <%= icon('angle-down') %>
            <% end %>

            <ul class="dropdown-menu">

              <%= content_tag :li, link_to('About Us', '#') %>
              <%= content_tag :li, link_to('Leadership', '#') %>
              <%= content_tag :li, link_to('FAQ', '#') %>

            </ul>

        <% end %>

        <%= content_tag :li, class:"nav-item dropdown #{is_active?('admissions')}" do %>

            <%= link_to "#", class:'dropdown-toggle', data: { toggle:'dropdown', hover:'dropdown', delay:'0' } do %>
              Admissions <%= icon('angle-down') %>
            <% end %>

            <ul class="dropdown-menu">

                <%= content_tag :li, link_to('Apply Now', '#') %>

            </ul>

        <% end %>

        <!-- CONTACTS CONTROLLER TREE -->
        <%= content_tag :li, link_to('Contact', '#'), class:"nav-item #{is_active?('contacts')}" %>

    </ul>

  </div>

</div>